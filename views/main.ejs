<%- include('partials/custom/header') %>

<div
  class="modal fade mt-4"
  tabindex="-1"
  role="dialog"
  id="modalForgetPass"
  aria-labelledby="modalSheetLabel"
  aria-hidden="true"
>
  <div class="modal-dialog" role="document">
    <div class="modal-content rounded-4 shadow">
      <div
        class="modal-header p-5 pt-2 pb-4 border-bottom-1 text-bg-primary mb-4"
        data-bs-theme="dark"
      >
        <h1 class="fw-bold mb-0 fs-2">Reset Password</h1>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body p-5 pt-0">
        <form action="/forgot-password" method="post">
          <div class="form-floating mb-3">
            <input
              type="email"
              name="email"
              class="form-control rounded-3"
              id="floatingInput"
              placeholder="name@example.com"
              required
            />
            <label for="floatingInput">Email address</label>
          </div>

          <button
            class="w-100 mb-2 btn btn-lg rounded-3 btn-primary"
            type="submit"
          >
            Send Reset Link
          </button>

          <hr class="my-4" />
        </form>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <% if (errors && errors.length > 0) { %>
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
    <svg
      xmlns="http://www.w3.org/2000/svg"
      class="bi flex-shrink-0 me-2"
      width="24"
      height="24"
      role="img"
      aria-label="Danger:"
      viewBox="0 0 16 16"
      fill="currentColor"
    >
      <path
        d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"
      />
    </svg>
    <strong>We couldn't <%= errordesc %> !</strong>
    <br />
    <%= errors %>
    <button
      type="button"
      class="btn-close"
      data-bs-dismiss="alert"
      aria-label="Close"
    ></button>
  </div>
  <% } %>
</div>
<div class="container">
  <% if (success && success.length > 0) { %>
  <div class="alert alert-success alert-dismissible fade show" role="alert">
    <svg
      xmlns="http://www.w3.org/2000/svg"
      class="bi flex-shrink-0 me-2"
      width="24"
      height="24"
      role="img"
      aria-label="Danger:"
      viewBox="0 0 16 16"
      fill="currentColor"
    >
      <path
        d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"
      />
    </svg>
    <strong>Success <%= successdesc %> !</strong>
    <br />
    <%= success %>
    <button
      type="button"
      class="btn-close"
      data-bs-dismiss="alert"
      aria-label="Close"
    ></button>
  </div>
  <% } %>
</div>
<div class="container">
  <div class="row">
    <div class="col-12 mx-auto mt-5">
      <div class="border-light">
        <div class="tab-content">
          <% if (activePage == 1) { %>
          <div class="tab-pane fade show active" id="signin">
            <% } else {%>
            <div class="tab-pane fade show" id="signin">
              <% } %>
              <section class="vh-100 mt-5">
                <div class="container">
                  <div
                    class="row d-flex justify-content-center align-items-center h-100"
                  >
                    <div class="col-lg-12 col-xl-11">
                      <div class="card text-black mt-4" style="border: none">
                        <div class="card-body p-md-3">
                          <div class="row justify-content-center">
                            <div
                              class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-2 mt-5"
                            >
                              <form method="post" action="/login">
                                <h1 class="h3 mb-3">Sign in</h1>
                                <div class="input-group mb-3">
                                  <span
                                    class="input-group-text bg-white border-end-0"
                                    ><i class="bi bi-envelope-fill fs-4"></i
                                  ></span>

                                  <div class="form-floating">
                                    <input
                                      type="email"
                                      class="form-control border-start-0"
                                      id="username"
                                      name="username"
                                      placeholder="name@example.com"
                                      required
                                    />

                                    <label for="username"> Email address</label>
                                  </div>
                                </div>

                                <div class="input-group mb-3">
                                  <span
                                    class="input-group-text bg-white border-end-0"
                                    ><i class="bi bi-key-fill fs-4"></i
                                  ></span>

                                  <div class="form-floating">
                                    <input
                                      name="password"
                                      type="password"
                                      class="form-control border-start-0"
                                      id="password"
                                      placeholder="Password"
                                      autocomplete="current-password"
                                      required
                                    />
                                    <label for="password">Password</label>
                                  </div>
                                </div>
                                <div class="form-check text-start my-3">
                                  <input
                                    class="form-check-input"
                                    type="checkbox"
                                    value="true"
                                    id="checkbox"
                                    name="checkbox"
                                  />
                                  <label class="form-check-label" for="checkbox"
                                    >Remember me</label
                                  >
                                </div>

                                <button
                                  class="btn btn-primary w-100 py-2"
                                  type="submit"
                                >
                                  Sign in
                                </button>
                                <p class="mb-0">
                                  Don't have an account?
                                  <a
                                    class="text-blue-50"
                                    id="signup-tab"
                                    data-toggle="tab"
                                    href="#signup"
                                    >Sign Up</a
                                  >
                                </p>
                                <p class="mb-0">
                                  Forgot Password?
                                  <a
                                    class="text-blue-50"
                                    data-bs-toggle="modal"
                                    data-bs-target="#modalForgetPass"
                                    href=""
                                    >Reset Here</a
                                  >
                                </p>
                              </form>
                            </div>
                            <div
                              class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-1"
                            >
                              <img
                                src="/images/login.png"
                                class="img-fluid"
                                alt="a guy logging in "
                                draggable="false"
                              />
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </section>
            </div>
            <% if (activePage == 2) { %>

            <div class="tab-pane fade show active" id="signup">
              <% } else {%>

              <div class="tab-pane fade show" id="signup">
                <% } %>
                <section class="vh-100 mt-5">
                  <div class="container">
                    <div
                      class="row d-flex justify-content-center align-items-center h-100"
                    >
                      <div class="col-lg-12 col-xl-11">
                        <div class="card text-black" style="border: none">
                          <div class="card-body p-md-3">
                            <div class="row justify-content-center">
                              <div
                                class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1 mt-5"
                              >
                                <form
                                  class="mx-1 mx-md-4"
                                  method="post"
                                  action="/signup"
                                >
                                  <h1 class="h3 mb-3">Sign up</h1>

                                  <div
                                    class="d-flex flex-row align-items-center mb-4"
                                  >
                                    <i class="bi bi-person-fill fs-2 me-3"></i>
                                    <div class="form-floating flex-fill mb-0">
                                      <input
                                        type="text"
                                        id="fullName"
                                        class="form-control"
                                        placeholder="John Doe"
                                        name="fullName"
                                        required
                                      />
                                      <label for="fullName"
                                        >Your Full Name</label
                                      >
                                    </div>
                                  </div>

                                  <div
                                    class="d-flex flex-row align-items-center mb-4"
                                  >
                                    <i
                                      class="bi bi-envelope-fill fs-2 me-3"
                                    ></i>
                                    <div class="form-floating flex-fill mb-0">
                                      <input
                                        type="email"
                                        id="email"
                                        class="form-control"
                                        placeholder="name@example.com"
                                        name="email"
                                        required
                                      />
                                      <label for="email">Your Email</label>
                                    </div>
                                  </div>

                                  <div
                                    class="d-flex flex-row align-items-center mb-4"
                                  >
                                    <i class="bi bi-lock-fill fs-2 me-3"></i>
                                    <div class="form-floating flex-fill mb-0">
                                      <input
                                        type="password"
                                        id="firstPassword"
                                        class="form-control"
                                        placeholder="**********"
                                        name="firstPassword"
                                        required
                                      />
                                      <label for="firstPassword"
                                        >Password</label
                                      >
                                    </div>
                                  </div>

                                  <div
                                    class="d-flex flex-row align-items-center mb-3"
                                  >
                                    <i class="bi bi-key-fill fs-2 me-3"></i>
                                    <div class="form-floating flex-fill mb-0">
                                      <input
                                        type="password"
                                        id="secondPassword"
                                        class="form-control"
                                        placeholder="**********"
                                        name="secondPassword"
                                        required
                                      />
                                      <label for="secondPassword"
                                        >Repeat your password</label
                                      >
                                    </div>
                                  </div>
                                  <div
                                    class="form-check d-flex justify-content-center my-3"
                                  >
                                    <input
                                      class="form-check-input me-2"
                                      type="checkbox"
                                      id="checkbox"
                                      name="checkbox"
                                      required
                                    />
                                    <label
                                      class="form-check-label"
                                      for="checkbox"
                                    >
                                      I agree all statements in
                                      <a href="#!">Terms of service</a>
                                    </label>
                                  </div>

                                  <button
                                    class="btn btn-primary w-100 py-2 mt-3"
                                    type="submit"
                                  >
                                    Sign up
                                  </button>
                                  <p class="mb-1">
                                    Already a member ?
                                    <a
                                      class="text-blue-50"
                                      id="signin-tab"
                                      data-toggle="tab"
                                      href="#signin"
                                      >Sign In</a
                                    >
                                  </p>
                                </form>
                              </div>
                              <div
                                class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2"
                              >
                                <img
                                  src="/images/login.png"
                                  class="img-fluid"
                                  alt="a guy logging in "
                                  draggable="false"
                                />
                              </div>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </section>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <%- include('partials/custom/footer') %>
  </div>
</div>
