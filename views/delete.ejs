<%- include('partials/header') %> 
<% if (!status) { %>
<div class="alert alert-danger alert-dismissible fade show" role="alert">
  <svg
    xmlns="http://www.w3.org/2000/svg"
    class="bi flex-shrink-0 me-2"
    width="24"
    height="24"
    role="img"
    aria-label="Danger:"
    viewBox="0 0 16 16"
    fill="currentColor"
  >
    <path
      d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"
    />
  </svg>
  <strong>An Error has occurred !</strong> we couldn't delete the post please
  try again or contact us
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% } %> <% postsList.forEach(posts => { %>
<form action="/delete" method="post">
  <h1><%= posts.title %></h1>
  <p><pre><%= posts.post; %></pre></p>
  <span class="badge bg-secondary-subtle text-secondary-emphasis rounded-pill"
    ><%= posts.date %></span
  >

  <button
    class="btn btn-danger rounded-pill px-3 mb-2"
    type="submit"
    value="<%= posts._id %>"
    id="postId"
    name="postId"
  >
    Delete
    <svg
      xmlns="http://www.w3.org/2000/svg"
      width="20"
      height="20"
      fill="currentColor"
      class="bi bi-x-circle-fill"
      viewBox="0 0 16 16"
    >
      <path
        d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM5.354 4.646a.5.5 0 1 0-.708.708L7.293 8l-2.647 2.646a.5.5 0 0 0 .708.708L8 8.707l2.646 2.647a.5.5 0 0 0 .708-.708L8.707 8l2.647-2.646a.5.5 0 0 0-.708-.708L8 7.293 5.354 4.646z"
      />
    </svg>
  </button>
</form>




<% }) %> 



<% if (postsList.length == 0) { %>
<h1>You currently have no posts to delete !</h1>
<h5 class="ms-4">add some post's <a href="/compose">here !</a></h5>
<% } %> <%- include('partials/footer') %>
